[Unit]
Description=PPPoE Status Exporter via MikroTik API (every 15 seconds)
After=network.target

[Service]
ExecStart=/usr/bin/python3 /opt/pppoe-exporter/pppoe_status_exporter.py
Restart=always
RestartSec=15s
WorkingDirectory=/opt/pppoe-exporter
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
